<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="ModManagerBase.Views.MakeProf"
        Title="Create Mod" Width="600" CanResize="False" Background="#e43079">
    <Grid ColumnDefinitions="*,5*" RowDefinitions="30,30,30,60,300,30,30,30,30,30,40">
        <TextBlock Text="Game" Foreground="#ffd9da" Grid.Row="0" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Mod Path" Foreground="#ffd9da" Grid.Row="1" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Text="Link" ToolTip.Tip="Link to the game's mod page." Foreground="#ffd9da" Grid.Row="2" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="3" Grid.RowSpan="8" Grid.ColumnSpan="2" Grid.ColumnDefinitions="*,2*,2*" Grid.RowDefinitions="30,30">
            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Theme Images (Optional)" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="15" Foreground="#ffd9da" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Selected" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="15" Foreground="#ffd9da" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="2" Text="Unselected" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="15" Foreground="#ffd9da" VerticalAlignment="Center"/>
        </Grid>
        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Text="Theme Colors (Optional) (In Hex)" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="15" Foreground="#ffd9da" VerticalAlignment="Center"/>
        <TextBlock Text="Background" Foreground="#ffd9da" Grid.Row="6" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Text="Description" Foreground="#ffd9da" Grid.Row="7" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Text="Settings" Foreground="#ffd9da" Grid.Row="8" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Text="Mod Grid" Foreground="#ffd9da" Grid.Row="9" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBox Name="NameBox" Margin="5" Grid.Column="1" Grid.Row="0" Foreground="#ffd9da" Background="#a10943"/>
        <TextBox Name="PathBox" Margin="5" Grid.Column="1" Grid.Row="1" Foreground="#ffd9da" Background="#a10943"/>
        <TextBox Name="LinkBox" ToolTip.Tip="Gamebanana or other source link." Margin="5" Grid.Column="1" Grid.Row="2" Foreground="#ffd9da" Background="#a10943"/>
        <Grid Grid.Row="4" Grid.RowSpan="8" Grid.ColumnSpan="2" Grid.ColumnDefinitions="*,2.5*,2.5*" Grid.RowDefinitions="30,30,30,30,30,30,30,30,30">
            <TextBlock Text="&quot;Mods&quot;" Foreground="#ffd9da" Grid.Row="0" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;Settings&quot;" Foreground="#ffd9da" Grid.Row="1" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;Switch&quot;" Foreground="#ffd9da" Grid.Row="3" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;Download&quot;" Foreground="#ffd9da" Grid.Row="4" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;Deploy&quot;" Foreground="#ffd9da" Grid.Row="5" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;New&quot;" Foreground="#ffd9da" Grid.Row="6" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;Open Folder&quot;" Foreground="#ffd9da" Grid.Row="7" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="&quot;Refresh&quot;" Foreground="#ffd9da" Grid.Row="8" FontWeight="ExtraBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*,3*" Margin="5">
                <Button Name="ModsButton" Click="ModsOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="ModsBox" ToolTip.Tip="Encoding may take a moment if including a preview." IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="*,3*" Margin="5">
                <Button Name="SettingsButton" Click="SettingsOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="SettingsBox" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2" ColumnDefinitions="*,3*" Margin="5">
                <Button Name="Mods2Button" Click="Mods2Open_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="Mods2Box" ToolTip.Tip="Encoding may take a moment if including a preview." IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2" ColumnDefinitions="*,3*" Margin="5">
                <Button Name="Settings2Button" Click="Settings2Open_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="Settings2Box" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <TextBlock Text="These only have one image." Foreground="#ffd9da" Grid.Row="2" Grid.ColumnSpan="4" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" ColumnDefinitions="*,7*" Margin="5">
                <Button Name="SwitchButton" Click="SwitchOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="SwitchBox" ToolTip.Tip="Encoding may take a moment if including a preview." IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" ColumnDefinitions="*,7*" Margin="5">
                <Button Name="DownloadButton" Click="DownloadOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="DownloadBox" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" ColumnDefinitions="*,7*" Margin="5">
                <Button Name="DeployButton" Click="DeployOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="DeployBox" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" ColumnDefinitions="*,7*" Margin="5">
                <Button Name="NewButton" Click="NewOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="NewBox" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" ColumnDefinitions="*,7*" Margin="5">
                <Button Name="OpenButton" Click="OpenOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="OpenBox" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
            <Grid Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" ColumnDefinitions="*,7*" Margin="5">
                <Button Name="RefreshButton" Click="RefreshOpen_Click" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" FontSize="11">Open</Button>
                <TextBox Name="RefreshBox" IsReadOnly="True" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
            </Grid>
        </Grid>
        <TextBox Name="BGCBox" Margin="5" Grid.Column="1" Grid.Row="6" Foreground="#ffd9da" Background="#a10943"/>
        <TextBox Name="DCBox" Margin="5" Grid.Column="1" Grid.Row="7" Foreground="#ffd9da" Background="#a10943"/>
        <TextBox Name="SCBox" Margin="5" Grid.Column="1" Grid.Row="8" Foreground="#ffd9da" Background="#a10943"/>
        <TextBox Name="MGCBox" Margin="5" Grid.Column="1" Grid.Row="9" Foreground="#ffd9da" Background="#a10943"/>
		<Grid Grid.Row="17" Grid.ColumnSpan="2" ColumnDefinitions="*,*">
			<Button Name="Cancel" Grid.Column="1" Click="Cancel_Click" HorizontalAlignment="Center">Cancel</Button>
			<Button Name="Confirm" Click="Confirm_Click" HorizontalAlignment="Center">Confirm</Button>
		</Grid>
    </Grid>
</Window>
